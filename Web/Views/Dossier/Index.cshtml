@model IEnumerable<GP.Domain.Entities.DossierMedical>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomPatient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomPatient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maladies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomPatient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomPatient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maladies)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CIN">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CIN">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CIN">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
